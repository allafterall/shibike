---
import "@fontsource-variable/public-sans";
import "@fontsource-variable/roboto-serif";
import { SEO } from "astro-seo";
import Footer from "../components/course/Footer.astro";
import TagManager from "../components/tags/TagManager.astro";
import TagManagerNoScript from "../components/tags/TagManagerNoscript.astro";

import coverImage from "./_images/bike_servicing.jpg";

interface Props {
  title: string;
  description: string;
  meta?: { // Meta is now optional and only carries distinct values
    noindex?: boolean;
  };
}

const { title, description, meta } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" href="/favicon-96x96.png" type="image/png" sizes="96x96" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <TagManager id="AW-17076537009" />
    <TagManager id="GTM-5JFTRPWX" />
    <SEO
      title={title}
      description={description}
      twitter={{
        card: "summary_large_image",
        creator: "@allafterall",
        description: description,
        title: title,
        image: coverImage.src,
        imageAlt: title,
        site: "https://shibike.co.uk",
      }}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: coverImage.src,
        },
        optional: {
          description: description,
          siteName: "ShiBike",
          locale: "en",
        },
        image: {
          alt: title,
          height: coverImage.height,
          width: coverImage.width,
          url: coverImage.src,
        },
      }}
      noindex={meta?.noindex || false}
    />
  </head>
  <body class="bg-background text-text antialiased">
    <TagManagerNoScript id="AW-17076537009" />
    <TagManagerNoScript id="GTM-5JFTRPWX" />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    /* Base color and background are now handled by Tailwind classes on the body tag */
    /* You can keep these if you have other elements directly using these CSS vars, */
    /* but for body, Tailwind classes are preferred. */
    /* --foreground-color: #5C3A21; /* shiba-brown-dark (Example, if needed elsewhere) */
    /* --background-color: #FFF9E6; /* shiba-cream (Example, if needed elsewhere) */
    /* --radius: 12px; (Example, if needed elsewhere) */
  }

  html {
    scroll-behavior: smooth; /* Optional: for smooth scrolling */
    scroll-padding-top: 3.5rem; /* 56px - Toolbar height on small screens */
  }

  @media (min-width: 768px) { /* Tailwind's md breakpoint */
    html {
      scroll-padding-top: 4rem; /* 64px - Toolbar height on md screens and up */
    }
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  /* Updated scrollbar colors for Shiba theme */
  ::-webkit-scrollbar-track {
    /* Subtle track color, derived from shiba-brown-light */
    background: rgba(166, 123, 91, 0.1); 
  }

  ::-webkit-scrollbar-thumb {
    /* Thumb color using shiba-brown-light */
    background: rgba(166, 123, 91, 0.4);
    border-radius: 3px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: rgba(166, 123, 91, 0.6);
  }
</style>
