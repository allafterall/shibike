---
import Button from "./Button.astro";

interface Props {
  buttonText: string;
}

const { buttonText } = Astro.props;
---

<div
  class="self-stretch pt-24 pb-12 flex flex-col justify-center items-center gap-16"
>
  <div
    class="px-0 pt-6 bg-primary-500 rounded-2xl flex flex-col justify-center items-center gap-6"
  >
    <Button
      text={buttonText}
      variant="primary"
      size="lg"
      href="/book"
    />
    <div class="max-w-2xl text-center">
      <slot name="footer" />
    </div>
  </div>
</div>
