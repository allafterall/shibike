---
import Heading from "./Heading.astro";

interface TestimonialItem {
  quote: string;
  author: string;
  link?: string;
}

interface Props {
  title: string;
  items: TestimonialItem[];
}

const { title, items } = Astro.props;
---

<div class="flex flex-col items-center text-center gap-8">
  <Heading level="h2">{title}</Heading>
  <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
    {
      items.map((item) => (
        <blockquote class="p-6 bg-stone-800 rounded-lg shadow-md">
          <p class="text-lg italic font-serif text-stone-300">
            "{item.quote}"
          </p>
          <footer class="mt-4 text-sm text-stone-400">
            - {item.link ? <a href={item.link} target="_blank" rel="noopener noreferrer" class="hover:underline">{item.author}</a> : item.author}
          </footer>
        </blockquote>
      ))
    }
  </div>
</div>