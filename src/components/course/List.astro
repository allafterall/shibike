---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"ul"> {
  items: string[];
}

const { items, class: className, ...props } = Astro.props;
---

<ul
  class:list={[
    "list-disc pl-7 text-xl font-normal font-sans ",
    className,
  ]}
  {...props}
>
  {items.map((item) => <li class="mb-2 leading-loose">{item}</li>)}
</ul>
