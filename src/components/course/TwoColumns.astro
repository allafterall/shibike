---
interface Props {
  title: string;
  date: string;
  imageSrc: string;
}

const { title, date, imageSrc } = Astro.props;
---

<section class="text-white max-w-[1200px] mx-auto">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16">
    <!-- Left column with image -->
    <div>
      <img src={imageSrc} alt="" class="w-full rounded-lg" />
    </div>

    <!-- Right column with content -->
    <div>
      <div class="flex items-center gap-4 mb-4">
        <div class="w-16 h-[1px] bg-stone-300"></div>
        <span class="text-stone-300 text-lg">{date}</span>
      </div>

      <h2 class="text-5xl font-bold font-serif leading-tight mb-6">
        {title}
      </h2>

      <div class="text-stone-300 text-2xl font-normal font-sans leading-9">
        <slot />
      </div>

      <div class="mt-8">
        <slot name="footer" />
      </div>
    </div>
  </div>
</section>

