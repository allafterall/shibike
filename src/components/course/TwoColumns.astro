---
interface Props {
  align?: "default" | "reverse";
}

const { align = "default" } = Astro.props;
---

<section class=" max-w-[1200px] mx-auto">
  <div
    class:list={[
      "grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16",
      align === "default" ? "md:order-first" : "md:order-last",
    ]}
  >
    <!-- Left column with image -->
    <div>
      <slot name="left" />
    </div>

    <!-- Right column with content -->
    <div>
      <slot name="right" />
    </div>
  </div>
</section>
