---
import Heading from "../../components/course/Heading.astro";
import Section from "../../components/course/Section.astro";
import TallyForm from "../../components/course/TallyForm.astro";
import Text from "../../components/course/Text.astro";
import Toolbar from "../../components/Toolbar.astro";
import CourseLayout from "../../layouts/Course.astro";
---

<CourseLayout
  title="Book a mobile bike servicing"
  description="Professional bike servicing in Central London at your home or workplace"
  meta={{
    title: "Book a mobile bike servicing",
    description: "Professional bike servicing in Central London at your home or workplace",
  }}
>
  <Toolbar />
  <main>
    <Section>
      <Heading level="h1" class="text-center mt-12 mb-8"
        >Book mobile bike servicing</Heading
      >

      <Text class="md:text-center mb-4">
        Please fill out the form below
      </Text>
      
      <div class="max-w-3xl mx-auto">
        <TallyForm
          id="3XgRjL"
          title="Book mobile bike servicing"
        />
      </div>
    </Section>
  </main>
</CourseLayout>
